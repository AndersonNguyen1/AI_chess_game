#include <stdio.h>
#include <stdlib.h>
#include "ChessAi.h"
int BestMove(PIECE piece, BOARD board) {
	int points = 0,i=0;
	int MoveX = 0, MoveY = 0;
	for (i = 0; i < 10; i++) {
		if (piece.PotentialMoves >= 0) {
			MoveX = piece.PotentialMoves[0] / 10;
			MoveY = piece.PotentialMoves[0] % 10;
			points += board.squares[MoveX][MoveY].Value;
		}
	}	
}
